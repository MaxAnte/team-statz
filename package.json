{
  "name": "team-statz",
  "version": "1.0.0",
  "description": "Team-played sports statistic app",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "server": "nodemon app.js",
    "app": "npm run start --prefix app",
    "app:install": "npm install --prefix app",
    "app:build": "npm run build --prefix app",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run app\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxAnte/team-statz.git"
  },
  "author": "Max Zahorskyi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaxAnte/team-statz/issues"
  },
  "homepage": "https://github.com/MaxAnte/team-statz#readme",
  "dependencies": {
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.13"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7"
  }
}
