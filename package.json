{
  "name": "team-statz",
  "version": "1.5.0",
  "description": "Team-played sports statistic app",
  "main": "dist/server/server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxAnte/team-statz.git"
  },
  "author": "Max Zahorskyi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaxAnte/team-statz/issues"
  },
  "homepage": "https://github.com/MaxAnte/team-statz#readme",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server/server.js",
    "server": "nodemon ./dist/server/server.js",
    "client": "npm run start --prefix client",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "dependencies": {
    "@types/config": "^0.0.39",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "config": "^3.3.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.13",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7"
  },
  "engines": {
    "node": "16.4.0"
  }
}
